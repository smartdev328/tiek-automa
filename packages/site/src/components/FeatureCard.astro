---
  import Icon from "astro-icon";

  const { imageFirst, title, description, icon, imageName } = Astro.props;

  const cls = imageFirst ? "order-0" : "order-1"

---

<div class="grid grid-cols-1 md:grid-cols-[3fr_2fr] gap-10 lg:gap-20 place-items-center">
  <div class={cls}>
    <img class="object-contain" src={imageName} alt="dashboard" />
  </div>

  <div class="flex flex-col items-start">
    <div class="flex-shrink-0 flex align-middle items-center justify-center rounded-full">
      <Icon name={icon} class="w-12 h-12" />
    </div>
    <h2 class="text-3xl lg:text-4xl text-extabold my-6">{title}</h2>
    <p class="text-lg lg:text-xl mb-2">{description}</p>
    <span class="mt-4 h-1 w-full bg-blue-600 lg:w-1/3"></span>
  </div>
</div>