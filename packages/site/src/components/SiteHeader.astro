---
  import logoTitle from '/assets/logo.svg'
  const BASE_URI = import.meta.env.DEV ? "http://localhost:3000" : "https://app.proautoma.com"
---

<div class='mt-2 relative z-50 h-14 flex items-center justify-between text-gray-900'>
  <div class="">
    <a href="/">
      <img class="w-56 min-w-full" src={logoTitle} />
    </a>
  </div>
  <div class="invisible md:visible md:w-2/3 flex items-center justify-center">
    <nav class="flex-1 flex items-center justify-center font-bold">
      <a href="/pricing" class="hover:text-gray-400 px-4">
        Pricing
      </a>
      <a href="/blog" class="font-bold hover:text-gray-400 px-4">
        Blog
      </a>
      <a href="/docs" class="font-bold hover:text-gray-400 px-4">
        Docs
      </a>
      <a href="/about/" class="font-bold hover:text-gray-400 px-4">
        About
      </a>
    </nav>
    <div class="flex items-center justify-end">
      <a href="https://app.proautoma.com/console/signin" class="font-bold hover:text-gray-400 px-4">
        Sign in
      </a>
      <a href="https://app.proautoma.com/console/signup" class="text-black px-4">
        <button class='rounded-lg p-2 mr-4 bg-blue-200'>
          Get Started
        </button>
      </a>
    </div>
  </div>
</div>