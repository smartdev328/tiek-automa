---
  import Layout from '../layouts/Layout.astro'
  import ContactForm from '../components/ContactForm.jsx'

  let APP_URI = import.meta.env.DEV ? 'http://localhost:8080' : 'https://app.proautoma.com'

---

<Layout title="Our Story | ProAutoma" description="">

  <h1 class='text-3xl md:text-4xl lg:text-5xl my-10 md:my-12 lg:my-16 text-center font-bold '>Contact us</h1>
  <ContactForm appUri={APP_URI} client:only="preact"></ContactForm>

</Layout>

<style>
  .bg-teal-400 {
    background-color: #595EDF
  }
</style>